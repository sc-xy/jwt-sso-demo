<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xy.ssoserver.mapper.UserMapper">
    <select id="checkUser" resultType="com.xy.ssoserver.entity.User">
        select * from t_user where user_name = #{username} and pass_word = #{password}
    </select>

    <select id="loadUserByUsername" resultType="com.xy.ssoserver.entity.User">
        select * from t_user where user_name = #{username}
    </select>
</mapper>